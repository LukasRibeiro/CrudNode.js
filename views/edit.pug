doctype html
html
	
	include common/header.pug

	body
    
	title #{title}
    
	.container
		.row.justify-content-md-center
			.col-md-6
				form.form-group(action='/cadastro/update', method='post')
					
					for pessoa in petecas
						
						h1.mt-3.mb-3 Editar
						|         Nome: 
						input.form-control(type='hidden', name='id', value=pessoa._id)
						input.mb-1.form-control(type='text', name='nome', value=pessoa.nome)
						|         Idade: 
						input.mb-3.form-control(type='text', name='idade', value=pessoa.idade)
						input.mr-1.btn.btn-primary(type='submit', value='Editar')
						a.mr-1.btn.btn-primary(href="/") Voltar
						a.btn.btn-danger(href="/cadastro/delete/"+pessoa._id) Deletar


          
